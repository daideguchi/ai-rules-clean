# üîê Environment Configuration Template
# Copy this to .env and configure your values

# ===== PROJECT CONFIGURATION =====
PROJECT_NAME=your-project-name
PROJECT_ROOT=/path/to/your/project
PROJECT_DESCRIPTION="Your AI governance system description"

# ===== AI API KEYS =====
GEMINI_API_KEY=your_gemini_api_key_here
CLAUDE_API_KEY=your_claude_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# ===== DATABASE CONFIGURATION =====
DATABASE_URL=postgresql://user:password@localhost:5432/your_database_name
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=your_database_name
DB_HOST=localhost
DB_PORT=5432

# ===== SECURITY SETTINGS =====
ENCRYPTION_KEY=generate_32_byte_key_here
SECRET_KEY=your_secret_key_for_sessions
API_KEY_ROTATION_DAYS=30

# ===== SYSTEM CONFIGURATION =====
LOG_LEVEL=INFO
DEBUG_MODE=false
DEVELOPMENT_MODE=false
BACKUP_RETENTION_DAYS=7

# ===== AI SYSTEM SETTINGS =====
MAX_CONVERSATION_HISTORY=1000
MEMORY_RETENTION_DAYS=30
AI_ORGANIZATION_ROLES=8
MISTAKE_PREVENTION_ENABLED=true

# ===== MONITORING & TELEMETRY =====
ENABLE_TELEMETRY=true
METRICS_ENDPOINT=http://localhost:8080/metrics
HEALTH_CHECK_INTERVAL=300

# ===== OPTIONAL INTEGRATIONS =====
GITHUB_TOKEN=your_github_token_here
SLACK_WEBHOOK_URL=your_slack_webhook_url
DISCORD_WEBHOOK_URL=your_discord_webhook_url